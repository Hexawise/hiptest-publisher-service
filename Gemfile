source 'https://rubygems.org'

gem 'builder', '~> 3.2.2' # Provide a simple way to create XML markup and data structures. http://builder.rubyforge.org
gem 'gherkin', '~> 5.1' # Gherkin parser/compiler for Ruby https://github.com/cucumber/gherkin-ruby
gem 'hiptest-publisher', git: 'git@github.com:Hexawise/hiptest-publisher.git' #'~> 1.21.0' # Publisher for Hiptest projects https://github.com/hiptest/hiptest-publisher
gem 'rack', '~> 2.0.6' # a modular Ruby webserver interface http://rack.github.io/
gem 'rack-contrib', '~> 2.1.0' # Contributed Rack Middleware and Utilities https://github.com/rack/rack-contrib
gem 'rubyzip', '~> 1.3.0' # Rubyzip is a ruby library for reading and writing zip files. https://github.com/rubyzip/rubyzip
gem 'sinatra', '~> 2.0.4' # Classy web-development dressed in a DSL (official / canonical repo) http://www.sinatrarb.com/
gem 'sinatra-contrib', '~> 2.0.4' # Collection of useful Sinatra extensions http://sinatrarb.com/contrib/

group :test do
  gem 'rack-test', '~> 1.1.0' # Rack::Test is a layer on top of Rack's MockRequest similar to Merb's RequestHelper  https://github.com/rack-test/rack-test
  gem 'rspec', '~> 3.8.0' # Behaviour Driven Development for Ruby https://github.com/rspec/rspec
end